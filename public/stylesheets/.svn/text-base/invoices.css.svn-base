/*  Invoice List */
.invoice-heading {
	background-color: #A2C0DA;
	border: 1px solid #A2C0DA;
	background: -webkit-gradient(linear, 0 0, 0 bottom, from(#FAFAFF), to(#A2C0DA));
	background: -moz-linear-gradient(#FAFAFF, #A2C0DA);
	background: linear-gradient(#FAFAFF, #A2C0DA);
}

.invoice-detail-title {
	background-color: #A2C0DA;
	border: 1px solid #A2C0DA;
	background: -webkit-gradient(linear, 0 0, 0 bottom, from(#FAFAFF), to(#A2C0DA));
	background: -moz-linear-gradient(#FAFAFF, #A2C0DA);
	background: linear-gradient(#FAFAFF, #A2C0DA);
}

.invoice-items tr {
	background-color: #FAFAFF;
}

.invoice-items th {
	background-color: #DAE6F0;
	background: -webkit-gradient(linear, 0 0, 0 bottom, from(#FAFAFF), to(#DAE6F0));
	background: -moz-linear-gradient(#FAFAFF, #DAE6F0);
	background: linear-gradient(#FAFAFF, #DAE6F0);
}

.invoice-items {
	border: 1px solid #A2C0DA;
}


/* Invoice Detail */

.invoice-detail-head {
	background-color: #DAE6F0;
	border: 1px solid #A2C0DA;
	-webkit-box-shadow: #ccc 0 0 2px;
    -moz-box-shadow: #ccc 0 0 2px;
    box-shadow: #ccc 0 0 2px;
	background: -webkit-gradient(linear, 0 0, 0 bottom, from(#FAFAFF), to(#DAE6F0));
	background: -moz-linear-gradient(#FAFAFF, #DAE6F0);
	background: linear-gradient(#FAFAFF, #DAE6F0);
}

.invoice-detail-actions {
	/*border: 1px solid #DAE6F0;*/
	background-color: #FAFAFF;
	-moz-border-radius: 0px 0px 5px 5px;
	-webkit-border-radius: 0px 0px 5px 5px;
	border-radius: 0px 0px 5px 5px;
	-webkit-box-shadow: #ccc 0 0 5px;
    -moz-box-shadow: #ccc 0 0 5px;
    box-shadow: #ccc 0 0 5px;
	border-top: none;
	border-left: none;
}

.invoice-head {
	font-size: .75em;
	padding: 10px;
	margin-left: 10px;
	border: 1px solid #A2C0DA;
	width: 600px;
	-moz-border-radius: 5px 5px 5px 5px;
	-webkit-border-radius: 5px 5px 5px 5px;
	border-radius: 5px 5px 5px 5px;
	-webkit-box-shadow: #ccc 0 0 2px;
    -moz-box-shadow: #ccc 0 0 2px;
    box-shadow: #ccc 0 0 2px;
}

.invoice-head th{
	text-align: right;
	padding: 2px 10px 10px 2px;
	width: 50px;
	vertical-align: top;
}

.invoice-head td{
	padding: 2px 2px 10px 2px;
	vertical-align: top;
}

.invoice-head .send-form{
	float: right;
}

.invoice-body{
	padding: 10px;
}

.invoice-body table{
	font-size: .6875em;
	min-width: 500px;
	border-collapse:collapse;
}

.invoice-body th{
	text-align: right;
	background-color: #DAE6F0;
	border: 1px solid #eee;
	padding: 3px;
}

.invoice-body th.project-number{
	text-align: left;
}

.invoice-body td{
	text-align: right;
	border: 1px solid #eee;
	padding: 5px 7px;
}

.invoice-body td.project-number{
	text-align: left;
}

.invoice-body td.total{
	padding-top: 10px;
}

.invoice-body p{
	font-size: .75em;
	font-style: italic;
	padding-bottom: 10px;
}
