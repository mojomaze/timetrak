<% 
	colors = [options[:color_dark], options[:color_medium], options[:color_light]]
%>
/*  <%= singular_table_name %> List */
.<%= singular_table_name %>-heading {
	background-color: <%= colors[0] %>;
	border: 1px solid <%= colors[0] %>;
	background: -webkit-gradient(linear, 0 0, 0 bottom, from(<%= colors[2] %>), to(<%= colors[0] %>));
	background: -moz-linear-gradient(<%= colors[2] %>, <%= colors[0] %>);
	background: linear-gradient(<%= colors[2] %>, <%= colors[0] %>);
}

.<%= singular_table_name %>-detail-title {
	background-color: <%= colors[0] %>;
	border: 1px solid <%= colors[0] %>;
	background: -webkit-gradient(linear, 0 0, 0 bottom, from(<%= colors[2] %>), to(<%= colors[0] %>));
	background: -moz-linear-gradient(<%= colors[2] %>, <%= colors[0] %>);
	background: linear-gradient(<%= colors[2] %>, <%= colors[0] %>);
}

.<%= singular_table_name %>-items tr {
	background-color: <%= colors[2] %>;
}

.<%= singular_table_name %>-items th {
	background-color: <%= colors[1] %>;
	background: -webkit-gradient(linear, 0 0, 0 bottom, from(<%= colors[2] %>), to(<%= colors[1] %>));
	background: -moz-linear-gradient(<%= colors[2] %>, <%= colors[1] %>);
	background: linear-gradient(<%= colors[2] %>, <%= colors[1] %>);
}

.<%= singular_table_name %>-items {
	border: 1px solid <%= colors[0] %>;
}


/* <%= singular_table_name %> Detail */

.<%= singular_table_name %>-detail-head {
	background-color: <%= colors[1] %>;
	border: 1px solid <%= colors[0] %>;
	-webkit-box-shadow: #ccc 0 0 2px;
    -moz-box-shadow: #ccc 0 0 2px;
    box-shadow: #ccc 0 0 2px;
	background: -webkit-gradient(linear, 0 0, 0 bottom, from(<%= colors[2] %>), to(<%= colors[1] %>));
	background: -moz-linear-gradient(<%= colors[2] %>, <%= colors[1] %>);
	background: linear-gradient(<%= colors[2] %>, <%= colors[1] %>);
}

.<%= singular_table_name %>-detail-actions {
	/*border: 1px solid <%= colors[1] %>;*/
	background-color: <%= colors[2] %>;
	-moz-border-radius: 0px 0px 5px 5px;
	-webkit-border-radius: 0px 0px 5px 5px;
	border-radius: 0px 0px 5px 5px;
	-webkit-box-shadow: #ccc 0 0 5px;
    -moz-box-shadow: #ccc 0 0 5px;
    box-shadow: #ccc 0 0 5px;
	border-top: none;
	border-left: none;
}

.<%= singular_table_name %>-head {
	font-size: .75em;
	padding: 10px;
	margin-left: 10px;
	border: 1px solid <%= colors[0] %>;
	width: 600px;
	-moz-border-radius: 5px 5px 5px 5px;
	-webkit-border-radius: 5px 5px 5px 5px;
	border-radius: 5px 5px 5px 5px;
	-webkit-box-shadow: #ccc 0 0 2px;
    -moz-box-shadow: #ccc 0 0 2px;
    box-shadow: #ccc 0 0 2px;
}

.<%= singular_table_name %>-head th{
	text-align: right;
	padding: 2px 10px 10px 2px;
	width: 50px;
	vertical-align: top;
}

.<%= singular_table_name %>-head td{
	padding: 2px 2px 10px 2px;
	vertical-align: top;
}

.<%= singular_table_name %>-head .send-form{
	float: right;
}

.<%= singular_table_name %>-body{
	padding: 10px;
}

.<%= singular_table_name %>-body table{
	font-size: .6875em;
	min-width: 500px;
	border-collapse:collapse;
}

.<%= singular_table_name %>-body th{
	text-align: right;
	background-color: <%= colors[1] %>;
	border: 1px solid #eee;
	padding: 3px;
}

.<%= singular_table_name %>-body th.project-number{
	text-align: left;
}

.<%= singular_table_name %>-body td{
	text-align: right;
	border: 1px solid #eee;
	padding: 5px 7px;
}

.<%= singular_table_name %>-body td.project-number{
	text-align: left;
}

.<%= singular_table_name %>-body td.total{
	padding-top: 10px;
}

.<%= singular_table_name %>-body p{
	font-size: .75em;
	font-style: italic;
	padding-bottom: 10px;
}